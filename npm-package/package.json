{
  "name": "discuss-for-specs",
  "version": "0.1.0-beta.1",
  "description": "Cross-platform skills and hooks for AI-powered discussion mode. Supports Claude Code and Cursor.",
  "keywords": [
    "claude-code",
    "cursor",
    "ai-assistant",
    "skills",
    "hooks",
    "discussion-mode",
    "specs",
    "specification"
  ],
  "author": "zhouhongxuan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vibe-x-ai/skill-discuss-for-specs.git"
  },
  "homepage": "https://github.com/vibe-x-ai/skill-discuss-for-specs#readme",
  "bugs": {
    "url": "https://github.com/vibe-x-ai/skill-discuss-for-specs/issues"
  },
  "bin": {
    "discuss-for-specs": "./bin/cli.js"
  },
  "main": "./src/index.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "dist/",
    "hooks/",
